<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvimg"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.22"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One Punch Man"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/studio_detail"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Studio"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/studio_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="J.C.Staff"
                android:textSize="@dimen/text_title" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/genre_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="@dimen/text_title"/>

            <TextView
                android:id="@+id/genre_name"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:text="Action, Sci-Fi, Comedy, Parody, Super Power, Supernatural, Seinen"
                android:textSize="@dimen/text_title" />


        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/desc_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Synopsis"
            android:textSize="@dimen/text_title" />


        <TextView
            android:id="@+id/desc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="The second season of One Punch Man."
            android:textSize="@dimen/text_title" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
